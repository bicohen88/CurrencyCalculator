<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.SelectCurrenciesController"
          prefHeight="400.0" prefWidth="600.0">

    <Text text="Select the currency you would like to add" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <ComboBox fx:id="selectCurrency" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Button text="Add" onAction="#addCurrency" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Remove Selected" onAction="#removeCurrency" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <ListView GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" fx:id="activeCurrencies"/>
    <Button text="Save Preset" onAction="#savePreset" GridPane.columnIndex="3" GridPane.rowIndex="0" />
    <Button text="Close" onAction="#closeWindow" GridPane.columnIndex="3" GridPane.rowIndex="3" />
</GridPane>
